{
	"compilerOptions": {
		"composite": true,
		"declaration": true,
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"strict": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"emitDeclarationOnly": true,
		"types": ["node", "bun"],
		"paths": {
			"@/*": ["./src/*"]
		}
	}
}
