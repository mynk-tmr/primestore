{
	"$schema": "https://biomejs.dev/schemas/1.9.3/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": ["routeTree.gen.ts", "api/", "dist/", "*.d.ts"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"all": true,
			"correctness": {
				"noUndeclaredDependencies": "off",
				"useImportExtensions": "off"
			},
			"style": {
				"noNonNullAssertion": "off",
				"noVar": "error",
				"noDefaultExport": "off"
			},
			"suspicious": {
				"noReactSpecificProps": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		},
		"globals": ["React", "bunjs"]
	}
}
